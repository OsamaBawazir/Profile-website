@model IEnumerable<Core.Entities.ProfileItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="padding:120px">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Project Name")
                </th>
                <th>
                    @Html.DisplayName("Descreption")
                </th>
                <th>
                    @Html.DisplayName("Img Url")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descreption)
                    </td>
                    <td>
                        <img  src="~/img/portfolio/@item.ImgUrl" class="img-thumbnail"style="width:64px;height:64px;"/>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.ID"><i class="fas fa-eye"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.ID"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
 