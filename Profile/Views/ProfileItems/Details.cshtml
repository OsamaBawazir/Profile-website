@model Core.Entities.ProfileItem

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="padding:120px">
    <h1>Details</h1>

    <div>
        <h4>ProfileItem</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayName("Project Name")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProjectName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descreption)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descreption)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("Img Url")
            </dt>
            <dd class="col-sm-10">
                <img src="~/img/portfolio/@Model.ImgUrl" class="img-thumbnail" style="width:64px;height:64px;" />
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </div>
</div>